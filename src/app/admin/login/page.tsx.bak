'use client';

import { useState, useEffect } from 'react';
import { useForm } from 'react-hook-form';
import { z } from 'zod';
import { zodResolver } from '@hookform/resolvers/zod';
import { useRouter } from 'next/navigation';

import { Button } from '@/components/ui/button';
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card';
import {
  Form,
  FormControl,
  FormField,
  FormItem,
  FormLabel,
  FormMessage,
} from '@/components/ui/form';
import { Input } from '@/components/ui/input';
import { useAuth } from '@/hooks/useAuth';
import { useToast } from '@/hooks/use-toast';
import { Loader2 } from 'lucide-react';
import { Logo } from '@/components/shared/Logo';

const formSchema = z.object({
  email: z.string().email({ message: 'Por favor, introduce un correo válido.' }),
  password: z.string().min(6, { message: 'La contraseña debe tener al menos 6 caracteres.' }),
});

export default function AdminLoginPage() {
  const { handleAdminLogin } = useAuth();
  const { toast } = useToast();
  const [isLoading, setIsLoading] = useState(false);
  const router = useRouter();
  
  // Eliminamos el useEffect que podría causar la actualización infinita
  
  const form = useForm<z.infer<typeof formSchema>>({
    resolver: zodResolver(formSchema),
    defaultValues: {
      email: '',
      password: '',
    },
  });

  // Función de login mejorada para evitar problemas de redirección
  async function onSubmit(values: z.infer<typeof formSchema>) {
    setIsLoading(true);
    try {
      console.log("AdminLoginPage - Intentando login con:", values.email);
      const adminUser = await handleAdminLogin(values.email, values.password);
      
      if (adminUser) {
        console.log("AdminLoginPage - Login exitoso, preparando redirección a /admin");
        
        // Esperamos un momento para asegurar que todos los estados se actualicen correctamente
        // Este timeout es crucial para evitar problemas de sincronización con el AuthProvider
        setTimeout(() => {
          console.log("AdminLoginPage - Ejecutando redirección a /admin");
          // Usar location.replace para una navegación más limpia que evita la historia del navegador
          window.location.replace('/admin');
        }, 100);
        
        return; // Importante para evitar que se siga ejecutando el código
      } else {
        // Si no recibimos un usuario pero tampoco un error, algo salió mal
        console.error("AdminLoginPage - No se recibió información de usuario");
        toast({
          variant: 'destructive',
          title: 'Error de inicio de sesión',
          description: 'Error al procesar la autenticación',
        });
        setIsLoading(false);
      }
    } catch (error: any) {
      console.error("AdminLoginPage - Error de login:", error);
      toast({
        variant: 'destructive',
        title: 'Error de inicio de sesión',
        description: error.message || 'Correo o contraseña incorrectos.',
      });
      setIsLoading(false);
    }
  }

  return (
    <div className="flex min-h-screen flex-col items-center justify-center p-4 bg-slate-900">
      <Card className="w-full max-w-md shadow-2xl border-primary">
        <CardHeader className="text-center bg-primary text-white rounded-t-lg">
          <div className="flex justify-center mb-4">
            <Logo className="h-12 w-12 text-white" />
          </div>
          <CardTitle className="text-2xl font-headline">Acceso Administrativo LaSalle</CardTitle>
          <CardDescription className="text-slate-200">
            Panel de control para gestión de préstamos y materiales
          </CardDescription>
        </CardHeader>
        <CardContent className="pt-6">
          <div className="mb-6 text-center">
            <span className="inline-block px-3 py-1 rounded-full bg-amber-100 text-amber-800 text-xs font-medium">
              Acceso restringido - Solo personal autorizado
            </span>
          </div>
          <Form {...form}>
            <form onSubmit={form.handleSubmit(onSubmit)} className="space-y-4">
              <FormField
                control={form.control}
                name="email"
                render={({ field }) => (
                  <FormItem>
                    <FormLabel>Correo Institucional</FormLabel>
                    <FormControl>
                      <Input 
                        placeholder="admin@lasalle.edu.mx" 
                        className="border-slate-400"
                        {...field} 
                      />
                    </FormControl>
                    <FormMessage />
                  </FormItem>
                )}
              />
              <FormField
                control={form.control}
                name="password"
                render={({ field }) => (
                  <FormItem>
                    <FormLabel>Contraseña</FormLabel>
                    <FormControl>
                      <Input 
                        type="password" 
                        placeholder="••••••••" 
                        className="border-slate-400"
                        {...field} 
                      />
                    </FormControl>
                    <FormMessage />
                  </FormItem>
                )}
              />
              <Button type="submit" className="w-full bg-primary hover:bg-primary/90" disabled={isLoading}>
                {isLoading && <Loader2 className="mr-2 h-4 w-4 animate-spin" />}
                Acceder al Sistema
              </Button>
            </form>
          </Form>
        </CardContent>
      </Card>
    </div>
  );
}
